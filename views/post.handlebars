{{#if loggedIn}}
<section class="post">
  <div class="post-details">
    <h3>{{post.title}}</h3>
    <h5>{{post.user_id}}</h5>
    <h5>{{post.date_created}}</h5>
    <p>{{post.content}}</p>
  </div>
<!-- Otherwise, provide a link to login -->
{{else}}<a href="/login">Log in to see this page</a>
{{/if}}
</section>