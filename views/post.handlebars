{{#if loggedIn}}
<section class="post">
  <div class="post-details">
    <h3>{{post.title}}</h3>
    <h5>{{post.user_id}}</h5>
    <h5>{{post.date_created}}</h5>
    <p>{{post.content}}</p>
    <button id="add-comment-btn">Add comment</button>
  </div>
</section>

<!-- comment form -->
<form class="form comment-form" action="/sport/post/" method="post">
  <div>
    <label for="comment">Comment</label>
    <input id="comment-content" type="text" required />
  </div>

  <div>
    <button id="submit-comment" type="submit">Submit</button>
  </div>
</form>



<!-- Otherwise, provide a link to login -->
{{else}}<a href="/login">Log in to see this page</a>
{{/if}}
</section>

{{#each comments as |comment|}}
{{> comment-details}}
{{/each}}


<script src="../public/js/comment.js"></script>